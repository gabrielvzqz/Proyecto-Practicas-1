<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/imageButtonVentas"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"
        android:src="@drawable/comprar"/>

    <Button
        android:id="@+id/buttonVentas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:text="Ventas"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonProductos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/productos" />

    <Button
        android:id="@+id/buttonProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:text="Productos"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonClientes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/clientescolor" />

    <Button
        android:id="@+id/buttonClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:text="Clientes"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
